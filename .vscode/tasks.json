{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "zig",
            "args": ["build"], // add -Doptimize=ReleaseSafe or -Doptimize=ReleaseFast to optimize
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true,
                "clear": true
            }
        },
        {
            "label": "build-tests",
            "type": "shell",
            "command": "zig test -femit-bin=zig-out/bin/test --test-no-exec src/test.zig",
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true,
                "clear": true
            }
        }
    ]
}
